{
    "extends": "@tsconfig/node18/tsconfig.json",

    "compilerOptions": {

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,

        "noImplicitOverride": true,
        "noUncheckedIndexedAccess": true,

        "isolatedModules": true,

        "sourceMap": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "dist",
        "rootDir": "./"
    },
    "include": [
        "./src/**/*.ts"
    ]
}
